<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tw.ntu.vison.gifformessenger.fragment.MainActivityFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/search_text"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="Search for GIF images..."/>
        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_search"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
        <tw.ntu.vison.gifformessenger.view.ExpandableHeightGridView
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchMode="columnWidth"
            android:numColumns="2">
        </tw.ntu.vison.gifformessenger.view.ExpandableHeightGridView>
        <Button
            android:id="@+id/button_load_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_load_more"/>
    </LinearLayout>
</ScrollView>
